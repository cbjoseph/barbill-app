<h1><a href= "/orders" class="btn btn-success btn-lg" data-method= "post">Buy Now!</a> </h1>
<% if current_user %>
  <h2><%= current_user.name %> wants to purchase:</h2>
<% end %>
<% @carteddrinks.each_slice(3) do |three_carteddrinks| %>
  <div class= "row">
    <% three_carteddrinks.each do |carteddrink|%>
        <div class="col-md-4">
          <div class="panel panel-success">
                         <div class="panel-heading">
                           <h3 class="panel-title"><%= carteddrink.drink.name %></h3>
                         </div>
              <div class="panel-body">
                <img src=<%=carteddrink.drink.img_src%> style="max-width:100%; height:200px">
                  <a href="/carted_drinks/<%=carteddrink.id%>" data-method="delete" class="btn btn-success">Remove this product</a>
                  <a href="/bars/<%=carteddrink.drink.bar_id%>" class="btn btn-success">Go back to all drinks</a>
              </div>
          </div>
        </div>
    <% end %>
  </div>
<% end %>



                   
