  <div class="loading-screen">
    <div class="content animated fadeInDown">
            <i class="fa fa-circle-o-notch fa-spin"></i>
            <h2 class="section-heading">Loading drinks</h2>
            <h3 class="section-subheading">Raise a glass...</h3>
    </div>
  </div>


  <h2><%= @bar.name%> Drinks</h2>
<% @drinks.each_slice(3) do |three_drinks| %>
  <div class="row">
      <% three_drinks.each do |drink| %>
        <div class="col-md-4">
          <div class="well">
              <img src="<%= drink.img_src %>" style="max-width:100%; height:300px">
                <%= form_tag "/carted_drinks", method: :post do %>
                  <div>
                     <p>Add Drink to Cart</p>
                      <%= label_tag :quantity %>
                      <%= text_field_tag :quantity, '', class: 'form-control' %>
                  </div>
                  <div>
                      <%= label_tag drink.name %>
                      <%= hidden_field_tag :drink_id, drink.id, class: 'form-control' %>
                  </div>
                  <div>
                    <%= submit_tag 'Add to Cart' %>
                  </div>
            <% end %>
          </div>
        </div>
      <% end %>
  </div>
<% end %>
<p>Wrigley Field</p>
                

 


